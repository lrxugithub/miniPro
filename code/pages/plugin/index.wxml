
<view class="container">
  <view class="cu-card article {{isCard?'no-card':''}}">
    <view wx:for="{{bookList}}" wx:key class="cu-item shadow" data-type="{{item.type}}" bindtap='viewInfo'>
      <view class="cu-tag bg-blue">{{item.head}}</view>
      <view class="title">{{item.title}}</view>
      <view class="content">
        <image src="https://image.weilanwl.com/img/4x3-1.jpg" mode="aspectFill"></image>
        <view class="desc">
          <view class='text-content'>{{item.content}}</view>
          <view>
            <view class='cu-tag bg-red light sm round'>{{item.label1}}</view>
            <view class='cu-tag bg-green light sm round'>{{item.lable2}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
