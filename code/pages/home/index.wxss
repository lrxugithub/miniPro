/**index.wxss**/
.container{
  background-color: #fff;
  width: 100vw;
  height: 100vh;
  display:  flex;
  flex-direction: column;
  align-items: center;  
}
.index-img{
  position: fixed;
  height: 100rpx;
  width: 100%;
  text-align: center;
}
.index-img-sub{
  height: 300rpx;
  width: 600rpx;
}
.userinfo {
  flex-direction: column;
  position: fixed;
  top: 300rpx;
  margin: 0 auto;
  width: 100%;
  text-align: center
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  flex-direction: row;
  justify-content: center;
  margin-top: 700rpx;
  margin-bottom: 50rpx;
}

.loading-progress{
  width: 100%;
  position: fixed;
  bottom: 100rpx;
}