.container_slide{
  position: absolute;
  height: 100%;
  width: 100%;
  float: bottom;
}
.item{
  position: absolute;
  height: 60%;
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  transition: all 0.6s ease-in 0s;
  border-top: 1rpx solid grey;
  z-index: 2;
}
.item-broadcast{
  position: absolute;
  top: 40%;
  left: 43.5%;
  height: 100rpx;
  width: 100rpx;
}
.item-title{
  position: absolute;
  top: 20rpx;
  left:20rpx;
  height: 100rpx;
  width: 100%rpx;
  color:white;
}
